{
  "$schema": "https://turborepo.org/schema.json",
  "pipeline": {
    "prisma-gen": {
      "dependsOn": ["^prisma-gen"]
    },
    "build": {
      "dependsOn": ["prisma-gen", "^build"],
      "env":  ["NEXT_PUBLIC_NAVER_MAPS_CLIENT_ID", "NEXT_PUBLIC_NAVER_MAPS_CLIENT_SECRET"],
      "outputs": ["dist/**", ".next/**"]
    },
    "lint": {
      "outputs": []
    },
    "dev": {
      "dependsOn": ["^prisma-gen"],
      "cache": false
    }
  },
  "globalDependencies": [
    ".env"
  ],
  "globalEnv": ["NEXT_PUBLIC_NAVER_MAPS_CLIENT_ID", "NEXT_PUBLIC_NAVER_MAPS_CLIENT_SECRET"]
}
